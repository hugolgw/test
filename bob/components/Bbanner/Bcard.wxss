.b-card {
    margin-left: 40rpx;
    margin-right: 40rpx;
    background: #fff;
    border-radius: 8rpx;
    font-size: 24rpx;
    color: #96969a;
    margin-bottom: 40rpx;
}

.b-fc {
    display: flex;
    align-items: center;
}

.b-card-img {
    display: block;
    width: 100%;
    max-height: 320rpx;
}

.b-card-top {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 20rpx;
    box-sizing: border-box;
}

.b-icon-hot {
    width: 48rpx;
    height: 48rpx;
    margin-right: 10rpx;
}

.b-icon-right {
    margin-left: 10rpx;
    width: 32rpx;
    height: 32rpx;
}

.b-card-bottom {
    width: 100%;
    padding: 20rpx 20rpx;
    box-sizing: border-box;
}

.b-card-title {
    font-size: 30rpx;
    color: #000;
}

.b-card-tag {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 20rpx;
}

.b-tag {
    padding: 6rpx 10rpx;
    border: 1px solid #96969a;
    border-radius: 4rpx;
}

.b-share {
    margin-left: 60rpx;
}